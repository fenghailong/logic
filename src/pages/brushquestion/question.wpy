    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 90vh;
  }
  .logic-index-canvas-close {
    left: 5000px;
  }
  .canvas {
    width: 100%;
    height: 100%;
    flex: 1;
    box-sizing: border-box;
    margin-top: 10rpx;
  }
  .logic-index-complete {
    position: fixed;
    bottom: 20px;
